<% layout('/layouts/boilerplate') %>
<body>
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" >
        <input type="text" name="listing[title]" value="<%= listing.title %>">
        <br><br>
        <textarea type="text" name="listing[description]" ><%= listing.description%></textarea>
        <br><br>
        <input name="listing[image]"  value="<%= listing.image.url %>" type="text"><br><br>
        <input type="number" name="listing[price]" value="<%= listing.price%>"><br><br>
        <input type="text" name="listing[country]" value="<%= listing.country %>"><br><br>
        <input type="text" name="listing[location]" value="<%= listing.location%>"><br>
        <button>Edit</button>
    </form>
</body>
