<% layout('/layouts/boilerplate') -%>

<style>
  #filters{
    display:flex;
    flex:wrap;
  }
  .filter{
    text-align:center;
    margin-top:2rem;
    margin-right:2rem;
    opacity:0.7;
  }
  .filter:hover{
    opacity:1;
    cursor:pointer;
  }
  .filter p{
    font-size:0.8rem;
  }
</style>
<style>
  .custom-switch .custom-control-label::before {
      left: -2.25rem;
      width: 2rem;
      pointer-events: all;
      border-radius: 1rem;
  }
  .custom-switch .custom-control-label::after {
      top: calc(.25rem + 2px);
      left: calc(-2.25rem + 2px);
      width: calc(1rem - 4px);
      height: calc(1rem - 4px);
      background-color: #fff;
      border-radius: 1rem;
      transition: transform .15s ease-in-out;
  }
  .custom-switch .custom-control-input:checked ~ .custom-control-label::after {
      transform: translateX(1rem);
  }
  </style>
<body>
  <!-- <h3>All listings</h3> -->
   <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="switch1">
        <label class="custom-control-label" for="switch1"></label>
      </div>
    </div>
   </div>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">

    <% for(let listing of allListings) { %>

    <div class="col">
      <div class="card listing-card" style="width: 20rem">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img class="card-img-top" src="<%- listing.image.url %>" alt="listing image" style="height: 20rem" />

          <div class="card-img-overlay"></div>


          <div class="card-body">
            <p class="card-text">
              <b> <%= listing.title %> <br /> </b>
              <%= listing.price.toLocaleString("en-IN") %> /night
            </p>
          </div>
        </a>
      </div>
    </div>

    <% } %>

    <div></div>
  </div>
</body>



