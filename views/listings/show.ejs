<% layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3>Listing Details</h3>
    </div>
    <!-- <div class="card"> -->
    <div class="card col-6 offset-3">
      <img
        class="card-img-top show-img"
        src="<%- listing.image.url %>"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %> <br />
          <span>&#8377;</span><%=
          listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <%= listing.country %>
        </p>
      </div>
    </div>
    <!-- </div> -->
  </div>

  <div class="btns mb-4">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-3 edit-btn"
      >Edit</a
    >
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=DELETE"></form>
    
      <button class="btn btn-dark offset-5">Delete</button>
    </form>
  </div>
  <div class="col-8 offset-3 mb-3">
    <h4>Leave a Review</h4>
    <hr>
    <form action="/listings/<%= listing._id %>/reviews"  novalidate class="needs-validation" method="POST">
      <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min="1" max="5" id="rating"  name="review[rating]" >
      </div>
      <div class="mt-3 mb-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" required class="form-control" cols="30" rows="10"></textarea>
        <div class="invalid-feedback">Please add some comment to review</div>
      </div>
      
      
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</body>
