<% layout('/layouts/boilerplate') %>
<body>
    <h3>Add new Listing</h3>
    <form method="POST" action="/listings">
        <input type="text" name="listing[title]" placeholder="Enter title">
        <br><br>
        <textarea type="text" name="listing[description]" placeholder="Enter description"></textarea>
        <br><br>
        <input name="listing[image]"  placeholder="Enter image URL/link" type="text"><br><br>
        <input type="number" name="listing[price]" placeholder="Enter price"><br><br>
        <input type="text" name="listing[country]" placeholder="Enter country"><br><br>
        <input type="text" name="listing[location]" placeholder="Enter location"><br>
        <button>Add</button>
    </form>
</body>
